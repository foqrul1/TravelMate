<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/event_background_1"
    tools:context=".MapGoogleNearByFragment">

   <TextView
       android:id="@+id/nearby_title"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:layout_marginTop="0dp"
       android:textColor="#fff"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textSize="30dp"
       android:gravity="center"
       android:textStyle="bold"
       android:text="NearBy Places"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignBottom="@+id/nearby_title"
        android:background="#fff"
        android:layout_height="1dp">

    </LinearLayout>

    <Button
        android:id="@+id/see_on_map_bt_mgnbf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="To map"
        android:layout_marginRight="10dp"
        android:layout_marginTop="45dp"
        android:visibility="visible" />

    <Spinner
        android:id="@+id/hotspot_spinner_mgnbf"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/radius_spinner_mgnbf"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp">

    </Spinner>

    <Spinner
        android:id="@+id/radius_spinner_mgnbf"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="165dp"
        android:layout_marginTop="79dp">

    </Spinner>

    <Button
        android:id="@+id/find_bt_mgnbf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="10dp"
        android:text="Find" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignBottom="@+id/radius_spinner_mgnbf"
        android:orientation="vertical"
        android:background="#fff"
        android:id="@+id/no_special_ln">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignBottom="@+id/no_special_ln"
        android:background="#fff"
        android:layout_height="1dp">

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_mgnbf"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_marginTop="155dp">

    </android.support.v7.widget.RecyclerView>
   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:id="@+id/see_more_bt_mgnbf"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:visibility="gone"
       android:text="More"/>

</RelativeLayout>